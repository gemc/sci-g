{
	# Run dosimeter simulation with
	# - ROOT and TXT outputs
	# - 1000 events
	# - a single proton and 2 electrons / event

	"nthreads": 2,

	# verbosities
	"verbosity": 1,
	"grunv": 1,
	"gsensitivityv": 1,

	# the target_cad and tof_cad cad directories contain the STL files
	"+gsystem": [
		{ "system":   "./cad_imports", "factory": "TEXT", "annotations": "mats_only" },
        { "system":   "./target_cad",  "factory": "CAD" },
		{ "system":   "./tof_cad",     "factory": "CAD" }
	],

	"+goutput": [
		{
			"format": "ROOT",
			"name": "events.root",
			"type": "event"
		},
		{
			"format": "TEXT",
			"name": "events.txt",
			"type": "event"
		}
	],

	"n": 1000,
	"maxebuffer": 1000,
	"physicsList": "FTFP_BERT",

	"+gparticle": [

		# a single 5 GeV proton along the z axis: only pid and p need to be defined
		{ "pname": "proton", "p": 5000 },

		# 2.1 GeV electrons at theta=3deg, uniform in phi, at z=-2mm
		{ "pname": "e-", "multiplicity": 12, "p": 2100, "theta": 3.0, "delta_phi": 180.0, "vz": -2.0}

	]


}
